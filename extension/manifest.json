{
    "manifest_version": 3,
    "name": "Site Blocker",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "pageCapture",
        "webRequest",
        "storage",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "options_page": "./Options/options.html",
    "background": {
        "service_worker": "./background.js"
    }
}